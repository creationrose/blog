<div class="container"><h1><%= @post.title %></h1>
<p><%= @post.body%></p>

			<h3>Comments </h3>
		<%= render @post.comments %>

		<h4>Reply to thread</h4>
		<%= render "comments/form" %>

		<br />

	<%= link_to "Edit this post", edit_post_path(@post), class: "button" %> |
	<%= link_to "Delete this post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?" }, class: "button" %>

  <p> Return to <%= link_to "Main page", root_path %></p>
</div>
